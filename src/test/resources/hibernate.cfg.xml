<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="hibernate.connection.driver_class">org.h2.Driver</property>
  <property name="hibernate.connection.url">jdbc:h2:mem:Finnancial</property>
  <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
  <property name="hibernate.hbm2ddl.auto">crete</property>
  <property name="hibernate.connection.username">sa</property>
  <property name="hibernate.connection.password"/>
  <property name="hibernate.default_schema">PUBLIC</property>
  <property name="show_sql">true</property>
  
  <mapping class="aroliveira.lab.structure.entities.layout.LayoutField"/>
  <mapping class="aroliveira.lab.structure.entities.layout.Field"/>
  <mapping class="aroliveira.lab.business.entities.EntityBean"/>
  <mapping class="aroliveira.lab.business.entities.statement.Statement"/>
  <mapping class="aroliveira.lab.business.entities.statement.StatementLabel"/>
    
  
 </session-factory>
</hibernate-configuration>
